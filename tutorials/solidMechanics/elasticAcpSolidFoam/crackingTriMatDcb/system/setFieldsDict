FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue materials 0
//    volVectorFieldValue U (0 0 0)
);

regions
(
    boxToCell
    {
        box	(0 0 0) (1 1 1);

        fieldValues
        (
            volScalarFieldValue materials 2
        );
    }
    boxToCell
    {
        box	(0 -0.002 -1) (1 0.002 1);

        fieldValues
        (
            volScalarFieldValue materials 1
        );
    }
);

