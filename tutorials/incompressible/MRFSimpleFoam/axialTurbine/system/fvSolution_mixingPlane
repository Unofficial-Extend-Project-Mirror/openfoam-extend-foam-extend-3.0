FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    // For meshes with
    // disparities in angle span across the mixingPlane interface, a
    // solver for asymmetrical matrices is required, like BiCGStab. When
    // in doubt, just select a solver for asymmetrical matrices for p.
    p
    {
        solver           BiCGStab;
        preconditioner   DILU;
        tolerance        1e-08;
        relTol           0.05;
    };
    U
    {
        solver           BiCGStab;
        preconditioner   DILU;
        tolerance        1e-07;
        relTol           0.1;
    };
    k
    {
        solver           BiCGStab;
        preconditioner   DILU;
        tolerance        1e-07;
        relTol           0.1;
    };
    epsilon
    {
        solver           BiCGStab;
        preconditioner   DILU;
        tolerance        1e-07;
        relTol           0.1;
    };
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
}

relaxationFactors
{
    p               0.3;
    U               0.7;
    k               0.7;
    epsilon         0.7;
}

// ************************************************************************* //
